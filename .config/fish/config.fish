function toggle-theme
	if [ "$THEME" = "Rosé Pine" ]
		set -U THEME "Rosé Pine Dawn"
	else
		set -U THEME "Rosé Pine"
	end

    kitty +kitten themes --reload-in=all $THEME

end

function nvim-chad
    env NVIM_APPNAME=nvim-nyoom nvim
end

function nvim-yum
    env NVIM_APPNAME=nvim-lazy nvim
end

function nvim-custom
    env NVIM_APPNAME=nvim-custom nvim
end

function nvims
    set items nvim-nyoom nvim-lazy nvim-custom
    set config (printf "%s\n" $items | fzf --prompt=" Neovim Config  " --height=~50% --layout=reverse --border --exit-0)
    if [ -z $config ]
        echo "Nothing selected"
        return 0
    else if [ $config = "default" ]
        set config ""
    end
    env NVIM_APPNAME=$config nvim $argv
end

bind \ca 'nvims\n'

